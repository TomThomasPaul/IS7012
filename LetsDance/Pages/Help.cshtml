@page
@model LetsDance.Pages.HelpModel
@{
    ViewData["Title"] = "Help page";
}

<div class="backgroundAbout">



    <div class="py-5 text-center container">

        <div class="row py-lg-5">

            <div class="col-lg-6 col-md-8 mx-auto">

                <h1 class="fw-light text-white">How can we help you?</h1>

            </div>

        </div>

    </div>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner w-auto h-50">
            <div class="carousel-item active">
                <img src="~/images/Admin.png" alt="Admin" style="height:550px; width:1480px; margin-top:70px;margin-left : 20px;margin-right :20px">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Administration</h5>
                    <p>This is the Admin page</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/Inquiry.png" alt="Inquiry" style="height: 550px; width: 1480px; margin-top: 70px;margin-left :20px;margin-right:20px">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Inquiry</h5>
                    <p> This is the inquiry functionality</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/Search Functionality.png" alt="Search" style="height: 550px; width: 1480px; margin-top: 70px; margin-left :20px;margin-right:20px">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Search</h5>
                    <p> Search Functionality</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/Statistical record.png" alt="Statistical Record" style="height: 550px; width: 1480px; margin-top: 70px; margin-left :20px;margin-right:20px">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Statistical Record</h5>
                    <p>Shows you the dynamic record of faculties and budding dancers</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>




</div>


@*enquiry form*@

<div class="mt-4" style="margin-top:20px">
    <h3 style="margin-top:100px">Have an Inquiry? </h3>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger">Inquiry</div>
        <div class="table-active table-bordered" style="margin-right:50%">
            <div class="form-group">
                <label asp-for="Inquiry.InquirerName" class="control-label"></label>
                <input asp-for="Inquiry.InquirerName" class="form-control" />
                <span asp-validation-for="Inquiry.InquirerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inquiry.InquirerEmail" class="control-label"></label>
                <input asp-for="Inquiry.InquirerEmail" class="form-control" />
                <span asp-validation-for="Inquiry.InquirerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inquiry.InquirerPhone" class="control-label"></label>
                <input asp-for="Inquiry.InquirerPhone" class="form-control" />
                <span asp-validation-for="Inquiry.InquirerPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inquiry.InquirerMessage" class="control-label"></label>
                <input asp-for="Inquiry.InquirerMessage" class="form-control" />
                <span asp-validation-for="Inquiry.InquirerMessage" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mt-4">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

</div>

@{

    if (TempData["successMessage"] != null)
    {

        <h4 class="bg-success">@TempData["successMessage"]</h4>
    }

}
