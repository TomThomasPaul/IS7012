@page
@model LetsDance.Pages.BuddingDancers.UpdateModel

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

@{
    if (@Model.BuddingDancer.PastStudent)
    {
        <h4> Remove @Model.BuddingDancer.DancerFirstName as Past Student?</h4>

    }
    else
    {
        <h4> Add @Model.BuddingDancer.DancerFirstName as Past Student?</h4>
    }

}

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BuddingDancer.BuddingDancerId" />

            <div class="form-group">
                <input type="submit" value="update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
