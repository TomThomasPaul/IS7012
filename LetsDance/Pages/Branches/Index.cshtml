@page
@model LetsDance.Pages.Branches.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Our Centers</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Branch[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch[0].AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch[0].AddressLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch[0].Zip)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Branch) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BranchId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BranchId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.BranchId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
