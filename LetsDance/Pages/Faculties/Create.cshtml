@page
@model LetsDance.Pages.Faculties.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add Faculty Member</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Faculty.FacultyFirstName" class="control-label"></label>
                <input asp-for="Faculty.FacultyFirstName" class="form-control" />
                <span asp-validation-for="Faculty.FacultyFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty.FacultyLastName" class="control-label"></label>
                <input asp-for="Faculty.FacultyLastName" class="form-control" />
                <span asp-validation-for="Faculty.FacultyLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty.Salary" class="control-label"></label>
                <input asp-for="Faculty.Salary" class="form-control" />
                <span asp-validation-for="Faculty.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty.Experience" class="control-label"></label>
                <input asp-for="Faculty.Experience" class="form-control" />
                <span asp-validation-for="Faculty.Experience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty.BranchId" class="control-label"></label>
                <select asp-for="Faculty.BranchId" class ="form-control" asp-items="ViewBag.BranchId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Faculty.GenreId" class="control-label"></label>
                <select asp-for="Faculty.GenreId" class ="form-control" asp-items="ViewBag.GenreId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
