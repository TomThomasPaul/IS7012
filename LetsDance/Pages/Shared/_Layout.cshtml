<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LetsDance</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-secondary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div>
                    @*<a class="navbar-brand font-italic font-weight-lighter text-white" asp-area="" asp-page="/Index">LetsDance</a>*@
                    <img src="./images/Logo.JPG" width="120" height="70" alt="logo" />
                    <img src="https://www.carlswebgraphics.com/dance/giraffe-dancers.gif" width="100" height="70" alt="giraffe dancers" />

                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" style="margin-left : 60%">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="" data-toggle="dropdown">Administration</a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/BuddingDancers/Index">Budding Dancers</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/Faculties/Index">Faculties</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/Genres/Index">Genres</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/ClassSchedules/Index">Class Schedules</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/Branches/Index">Branches</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3 ml-0 mr-0">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - LetsDance - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>




                  