@page
@model RecruitCatThoma2tp.Pages.Candidates.IndexModel

@{
    ViewData["Title"] = "All Candidates";
}

<h1>All Candidates</h1>

<p>
    <a asp-page="Create">Create new Candidate</a>
</p>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].TargetSalary)
            </th>
            
              <th>
            @Html.DisplayNameFor(model => model.Candidate[0].CandidateStartDate)
        </th>   

            

            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].CurrentOrganizationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].CompanyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].JobTitleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].IndustryId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Candidate) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetSalary)
            </td>
            
            <td>
            @Html.DisplayFor(modelItem => item.CandidateStartDate)
        </td> 
            

            <td>
                @Html.DisplayFor(modelItem => item.CurrentOrganizationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
               
                @Html.DisplayFor(modelItem => item.Company.CompanyName)
            </td>
            <td>
              
                @Html.DisplayFor(modelItem => item.JobTitle.JobTitleName)
            </td>
            <td>
             
                @{ if (item.Industry.IndustryName == "Artists")
                    {
                                <span class="badge badge-warning">@item.Industry.IndustryName</span>
                    }
                    else
                    {
                         <span class="badge badge-info">@item.Industry.IndustryName</span>
                    }


                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CandidateId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CandidateId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CandidateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
