@page
@model RecruitCatThoma2tp.Pages.Companies.CreateModel

@{
    ViewData["Title"] = "Add Company";
}

<h1>Add Company</h1>

@*<h4>Company</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Company.CompanyName" class="control-label"></label>
                <input asp-for="Company.CompanyName" class="form-control" />
                <span asp-validation-for="Company.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.PositionName" class="control-label"></label>
                <input asp-for="Company.PositionName" class="form-control" />
                <span asp-validation-for="Company.PositionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.MinimumSalary" class="control-label"></label>
                <input asp-for="Company.MinimumSalary" class="form-control" />
                <span asp-validation-for="Company.MinimumSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.MaximumSalary" class="control-label"></label>
                <input asp-for="Company.MaximumSalary" class="form-control" />
                <span asp-validation-for="Company.MaximumSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.ProposedStartDate" class="control-label"></label>
                <input asp-for="Company.ProposedStartDate" class="form-control" />
                <span asp-validation-for="Company.ProposedStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.IndustryId" class="control-label"></label>
                <select asp-for="Company.IndustryId" class="form-control" asp-items="ViewBag.IndustryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Company.AnnualTurnOver" class="control-label"></label>
                <input asp-for="Company.AnnualTurnOver" class="form-control" />
                <span asp-validation-for="Company.AnnualTurnOver" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
