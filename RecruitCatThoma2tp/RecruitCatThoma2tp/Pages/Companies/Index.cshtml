@page
@model RecruitCatThoma2tp.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "All Companies";
}

<h1>All Companies</h1>

<p>
    <a asp-page="Create">Create New Company</a>
</p>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].PositionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MinimumSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MaximumSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].ProposedStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].IndustryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].AnnualTurnOver)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaximumSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProposedStartDate)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.Industry.IndustryId) *@
                @Html.DisplayFor(modelItem => item.Industry.IndustryType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnnualTurnOver)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CompanyId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CompanyId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CompanyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
