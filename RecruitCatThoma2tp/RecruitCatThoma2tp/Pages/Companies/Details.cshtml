@page
@model RecruitCatThoma2tp.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "View Company Details";
}

<h1>View Company Details</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.PositionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.PositionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinimumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinimumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaximumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaximumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.ProposedStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.ProposedStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.IndustryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.IndustryType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.AnnualTurnOver)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.AnnualTurnOver)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.CompanyId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>


@if (Model.Company.Candidates.Any())
{



    <div>
        <h4 class="mt-3">Candidates</h4>
        <table class="table table-bordered table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].DateOfBirth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Candidates[0].CurrentOrganizationName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Company.Candidates)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrentOrganizationName)
                    </td>
                    <td>
                        <a asp-page="/Candidates/Details" asp-route-id="@item.CandidateId">Show All Details</a>

                    </td>
                </tr>
                }
            </tbody>
        </table>


    </div>
}else
{
    <div class=" badge badge-danger" >No Candidates found for this company</div>
}
