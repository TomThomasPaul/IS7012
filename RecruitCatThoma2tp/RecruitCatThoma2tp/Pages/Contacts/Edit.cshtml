@page
@model RecruitCatThoma2tp.Pages.Contacts.EditModel

@{
    ViewData["Title"] = "Edit Contact Details";
}

<h1>Edit Contact Details</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Contact.ContactId" />
            <div class="form-group">
                <label asp-for="Contact.EmailId" class="control-label"></label>
                <input asp-for="Contact.EmailId" class="form-control" />
                <span asp-validation-for="Contact.EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.PhoneNumber" class="control-label"></label>
                <input asp-for="Contact.PhoneNumber" class="form-control" />
                <span asp-validation-for="Contact.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.Country" class="control-label"></label>
                <input asp-for="Contact.Country" class="form-control" />
                <span asp-validation-for="Contact.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.State" class="control-label"></label>
                <input asp-for="Contact.State" class="form-control" />
                <span asp-validation-for="Contact.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.City" class="control-label"></label>
                <input asp-for="Contact.City" class="form-control" />
                <span asp-validation-for="Contact.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.AddressLine1" class="control-label"></label>
                <input asp-for="Contact.AddressLine1" class="form-control" />
                <span asp-validation-for="Contact.AddressLine1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.AddressLine2" class="control-label"></label>
                <textarea asp-for="Contact.AddressLine2" class="form-control" ></textarea>
                <span asp-validation-for="Contact.AddressLine2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.ContactType" class="control-label"></label>
                <textarea asp-for="Contact.ContactType" class="form-control" ></textarea>
                <span asp-validation-for="Contact.ContactType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.CompanyId" class="control-label"></label>
                <select asp-for="Contact.CompanyId" class="form-control" asp-items="ViewBag.CompanyId">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="Contact.CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.CandidateId" class="control-label"></label>
                <select asp-for="Contact.CandidateId" class="form-control" asp-items="ViewBag.CandidateId">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="Contact.CandidateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
